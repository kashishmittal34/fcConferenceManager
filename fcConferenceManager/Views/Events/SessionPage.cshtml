
@{
    ViewBag.Title = "SessionPage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <style>
        table
        {
            width: 100%;
            font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
            -webkit-font-smoothing: antialiased;
        }

        th
        {
            background-color: lightgrey;
        }

        .bold
        {
            font: bold;
            font-weight: bold;
        }

        tr .bold
        {
            font-weight: bold;
        }

        .modal
        {
            display: none;
            position: fixed;
            z-index: 8;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            overflow: auto;
            background-color: rgb(0, 0, 0);
            background-color: rgba(0, 0, 0, 0.4);
        }

        .modal-content
        {
            margin: 50px auto;
            border: 1px solid #999;
            /* width: 50%;*/
        }

        /* .modal h2, p {
            margin: 0 0 20px;
            font-weight: 400;
            color: #999;
        }*/

        .modal span
        {
            color: #666;
            display: block;
            padding: 0 0 5px;
        }

        .modal form
        {
            box-shadow: 0 2px 5px #f5f5f5;
            background: #eee;
        }

        .modal .contact-form button
        {
            width: 100%;
            padding: 10px;
            border: none;
            background: #1c87c9;
            font-size: 8px;
            font-weight: 200;
            color: #fff;
        }

        .modal button:hover
        {
            background: #2371a0;
        }


        .modal button.button
        {
            background: none;
            border-top: none;
            outline: none;
            border-right: none;
            border-left: none;
            border-bottom: #02274a 1px solid;
            padding: 0 0 3px 0;
            font-size: 8px;
            cursor: pointer;
        }

        .modal button.button:hover
        {
            border-bottom: #a99567 1px solid;
            color: #a99567;
        }
    </style>
</head>


<div class="magiMySessionMainWrapper mt-3">
    <div class="container-fluid">
        <div class="row">
            @{
                Html.RenderAction("_PartialEventInfo", "Home");
            }
            <div class="col-md-8 col-lg-9 flex-grow-1">
                <div class="align-items-center d-md-flex flex-wrap mb-4">

                    <div class="col-md-12">
                        <table width="100%">
                            <tr>
                                <td>
                                    <table class="popupheader">
                                        <tr>
                                            <td style="padding: 3px; text-align: left">
                                                <div class="lblTitle"><h2>(@ViewBag.SessionId) @ViewBag.SessionTitle</h2></div>
                                            </td>
                                            <td>
                                                <div style="text-align: left; float: right;"><a id="btnReturn" href="@ViewBag.ReturnUrl" type="button" class="btn mb-1 mb-1 pull-right">Return</a></div>
                                            </td>
                                        </tr>
                                    </table>
                                </td>
                            </tr>
                        </table>

                        <table style="width: 100%;">
                            <tbody>
                                <tr>
                                    <td style="padding-bottom: 10px">
