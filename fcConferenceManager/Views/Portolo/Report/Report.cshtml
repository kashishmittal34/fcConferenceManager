@*@model IEnumerable<fcConferenceManager.Models.Portolo.Topic>*@

@{
    ViewBag.Title = "Reports";
    Layout = "~/Views/Portolo/Shared/_Layout.cshtml";
}
<link href="~/Content/components.css" rel="stylesheet" />

<script src="~/Scripts/jquery.dataTables.min.js"></script>

<head>

    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=, initial-scale=1.0">

</head>

<style>
    .form-control:disabled, .form-control[readonly] {
        background-color: #e9ecef0f;
        opacity: 1;
    }

    .dataTable td .brdr-1 {
        padding: 0 5px;
        border-radius: 2px;
    }

    .dataTables_paginate {
        width: 100%;
        text-align: center !important;
        border: 1px solid #e6e6e6;
        background-color: #f9f9f9;
        padding: 5px 0 4px;
        line-height: 22px;
        float: none !important;
        margin: 0px;
    }

    .dataTables_paginate .paginate_button {
        border-width: 1px !important;
        border-style: solid !important;
        border-color: #e0e0e0 !important;
        border-radius: 0 !important;
        color: #000 !important;
        background: #f9f9f9 !important;
        padding: 3px !important;
        display: inline-block !important;
        position: relative;
        vertical-align: middle;
        cursor: pointer !important;
        font-size: 13px;
        margin: 5px;
    }


    .dataTables_wrapper .dataTables_paginate a.paginate_button:hover {
        color: #333 !important;
        background-color: #e7e7e7 !important;
    }

    .paginate_button.previous:after, .paginate_button.next:after {
        content: "";
        display: block;
        border-width: 4px;
        border-style: solid;
        border-color: transparent #000 transparent transparent;
        position: absolute;
        top: 50%;
        right: 6px;
        transform: translateY(-50%);
    }

    .paginate_button.previous, .paginate_button.next {
        font-size: 0;
        width: 20px !important;
        height: 20px;
    }

    .paginate_button.next:after {
        border-color: transparent transparent transparent #000;
        right: auto;
        left: 6px;
    }

    .dataTable thead .sorting_desc:after, .dataTable thead .sorting_asc:after, .dataTable thead .sorting:after, .dataTable thead .sorting:before {
        content: none;
    }
</style>

<body>
    <section class="task-list-form">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <form id="formFields" action="" method="get">
                        <div class="control-icons">
                            <h2>Reports</h2>
                            <button type="submit" id="ExcelBtn" name="excel" value="true" style="border-color: white; border: none;background-color:white">
                                <i class="fa-solid fa-download" title="Download Excel"></i>
                            </button>

                            <a id="SearchBtn" value="Search" title="Search">
                                <i class="fa-solid fa-magnifying-glass"></i>
                            </a>
                            <a href="#" id="ResetFields"><i class="fa-solid fa-arrows-rotate"></i></a>
                        </div>

                        <div class="card">
                            <div class="emp-data">
                                <table style="width:100%">
                                    <tr style="padding: 5px; background-color: orange;">
                                        <th>Select Report</th>
                                        <th id="SelectedReport"><th>
                                    </tr>
                                    <tr style="height: 600px; text-align:left">
                                        <td style="vertical-align: top; border-right: 2px solid orange; width: 220px;">
                                            <div style="overflow:auto;font-size:10pt;height:600px;width:250px;overflow-x: hidden;">
                                                <table>
                                                    <tr>
                                                        <td style="width:20px;">
                                                            <i class="fas fa-caret-right" style="color: #ed6c31"></i>
                                                            <ul style="display:none">
                                                                <li><a class="PartialCheck" href="#" value="/Portolo/Reports?reportId=1" style="color:black">Users List</a></li>
                                                                <li><a class="PartialCheck" href="#" value="/Portolo/Reports?reportId=2" style="color:black">Products List</a></li>
                                                            </ul>
                                                        </td>

                                                        <td><b>Users</b></td>
                                                    </tr>

                                                    <tr>
                                                        <td style="width:20px;">
                                                            <i class="fas fa-caret-right" style="color: #ed6c31"></i>
                                                            <ul style="display:none">
                                                                <li><a href="#" style="color:black">Activity Report 1</a></li>
                                                                <li><a href="#" style="color:black">Activity Report 2</a></li>
                                                                <li><a href="#" style="color:black">Activity Report 3</a></li>
                                                            </ul>
                                                        </td>

                                                        <td><b>Activity Chairs</b></td>
                                                    </tr>

                                                    <tr>
                                                        <td style="width:20px;">
                                                            <i class="fas fa-caret-right" style="color: #ed6c31"></i>
                                                            <ul style="display:none">
                                                                <li><a href="#" style="color:black">Application Issue Report 1</a></li>
                                                                <li><a href="#" style="color:black">Application Issue Report 2</a></li>
                                                            </ul>
                                                        </td>

                                                        <td><b>Application Issues</b></td>
                                                    </tr>

                                                    <tr>
                                                        <td style="width:20px;">
                                                            <i class="fas fa-caret-right" style="color: #ed6c31"></i>
                                                            <ul style="display:none">
                                                                <li><a href="#" style="color:black">Event Report 1</a></li>
                                                                <li><a href="#" style="color:black">Event Report 2</a></li>
                                                            </ul>
                                                        </td>

                                                        <td><b>Events</b></td>
                                                    </tr>

                                                    <tr>
                                                        <td style="width:20px;">
                                                            <i class="fas fa-caret-right" style="color: #ed6c31"></i>
                                                            <ul style="display:none">
                                                                <li><a href="#" style="color:black">Product Report 2</a></li>
                                                                <li><a href="#" style="color:black">Product Report 2</a></li>
                                                                <li><a href="#" style="color:black">Product Report 3</a></li>
                                                            </ul>
                                                        </td>

                                                        <td><b>Products</b></td>
                                                    </tr>
                                                </table>
                                            </div>
                                        </td>
                                        @if (ViewBag.ReportId == null)
                                        {
                                            <td id="mod2" style="vertical-align: top; Padding:15px;">
                                                <h5> No Report selected</h5>
                                            </td>
                                        }
                                        <td style="vertical-align: top; padding-left: 10px; font-size: 8pt; padding-top: 5px;">
                                            <div id="mod1"> </div>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>


    <footer>
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <p>	© 2022 by Elimar Systems. All Rights Reserved <a href="#" class="ml-5">Website Terms of Use</a></p>
                </div>
            </div>
        </div>
    </footer>

    <script>
        $(document).ready(function () {
            $("#table").dataTable({
                paging: true, bFilter: true, ordering: true, searching: true, dom: 'tp', "order": [[0, "desc"]], pageLength: 50
            });

            $(".paginate_button").on("click", function () {
                $("#select-all").prop('checked', false);
            });

            $('#ExcelBtn').prop('disabled', true);
        });

        var check = "";

        $(".card").on("click", ".PartialCheck", function () {
            $("#mod2").hide();
            var href = $(this).attr('value');
            var list = $(this).text();
            $("#mod1").load(href);
            check = href;
            $('#ExcelBtn').prop('disabled', false);
            $("#SelectedReport").text(list);
        });

        $("#ResetFields").click(function () {
            $("#mod1").load(check);
        });

        $("#SearchBtn").click(function (e) {
            var fields = $("#formFields").serializeArray();
            $("#mod1").load("/Portolo/SearchReportUser", fields);
        });

        $("#ExcelBtn").click(function (e) {
            $("#formFields").attr('action', '/Portolo/DownloadReport');
        });

        $(".card").on("click", ".fa-caret-right", function () {

            $(this).closest("tr").after("<tr><td></td><td colspan = '999'>" + $(this).next().html() + "</td></tr>");
            $(this).removeClass('fa-caret-right');
            $(this).addClass('fa-caret-down');
        });

        $(".card").on("click", ".fa-caret-down", function () {
            $(this).closest("tr").next().remove();
            $(this).removeClass('fa-caret-down');
            $(this).addClass('fa-caret-right');
        });
    </script>

    <link rel="stylesheet" href="../Scripts/jquery-ui.css" />
    <script src="../Scripts/jquery-ui.js"></script>
</body>




