        function cropImage() {
            if (imageCropWidth == 0 && imageCropHeight == 0) {
                alert("Please select Crop Image!");
                return;
            }
            var img = $("image").attr("src");
            showCroppedImage();
        }
        function showCroppedImage() {
            var X1 = cropPointX;
            var Y1 = cropPointY;
            var width = imageCropWidth;
            var height = imageCropHeight;
            var canvas = canvas.getContext('2d');
            var img = new Image();
            img.onload = function () {
                canvas.height = height;
                canvas.width = width;
                canvas.drawImage(img, X1, Y1.width, height, 0, 0, width, height);
                $('#cropped').val(canvas.toDataURL());
            };
            img.src = $('#image').attr("src");
        }
        function readFile(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                if (jcropApi != null) {
                    jcropApi.destroy();
                }
                reader.onload = function (e) {
                    $('#image').attr('src', "");
                    var img = $('#image').attr('src', e.target.result);
                    var width = img[0].width;
                    var height = img[0].height;
                    $('#lblwidth').text(width + "px");

                    $('#lblheight').text(height + "px");
                    initCrop();
                }
                reader.readAsDataURL(input.files[0]);
            }
        }
