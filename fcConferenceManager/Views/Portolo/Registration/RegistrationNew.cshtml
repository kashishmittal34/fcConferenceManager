            }, function () { jcropApi = this });

        }
        function showCoordinate() {
            $('#lblwidth').text(imageCropWidth + "px");

            $('#lblheight').text(imageCropHeight + "px");
        }
        function setCoordsandImageSize(e) {
            imageCropWidth = e.w;
            imageCropHeight = e.h;
            cropPointX = e.x;
            cropPointY = e.y;
            $('#lblwidth').text(imageCropWidth + "px");

            $('#lblheight').text(imageCropHeight + "px");
