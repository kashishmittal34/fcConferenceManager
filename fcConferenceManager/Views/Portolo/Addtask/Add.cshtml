@model Models.TaskAddRequest
@*<a href="~/Models/Portolo/TaskAddRequest.cs">~/Models/Portolo/TaskAddRequest.cs</a>*@
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Portolo/Shared/_Layout.cshtml";
}


<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>




<head>


    <style>
        .slideright
        {
            padding-left: 15px
        }

        .header
        {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: white;
            padding: 10px 15px;
            box-shadow: 0 1px 5px #00000040;
        }

        .dropdown
        {
            padding-right: 50px;
            border-width: 1px;
            padding: 4px 25px 2px 5px;
            border-width: -15px;
            border-style: solid;
            display: block;
            position: relative;
        }

        .btnOrange
        {
            background-color: orange;
            border-radius: 2px;
            border: 2px solid orange;
            color: #fff;
            padding: 3px 8px !important;
        }

        .rgHeader
        {
            padding: 2px !important;
            background-color: #1e90ff;
            justify-content: space-between;
            color: #fff !important;
            height: 18px !important;
            border-left-color: #1e90ff !important;
        }

        .plan
        {
            text-decoration: inherit;
            display: inline-block;
            vertical-align: middle;
        }
    </style>
    <script type="text/javascript" language="javascript">

        function validateInputs(e) {

            debugger;
            var title = $.trim($('#title').val());
            var description = $.trim($('#description').val());
            if (title == "") {
                $("#title").focus();
                alert("Please enter the title of the task");
                return false;
            }
            if (description == "") {
                $("#description").focus();
                alert("Please enter the description of the task");
                return false;
            }


        }
    </script>
</head>

<form action="/Addtask/add" method="post" enctype="multipart/form-data" onsubmit="validateInputs(e);">

    <header>




        @*<label style="justify-content: space-between;">NEW TASK </label>*@
        @*<tr class="magi-flex magi-justify-content-space-between magi-align-center">
                <td style="vertical-align: top;">
                    <span id="cphMain_lblTitle" class="lblTitle">New Task</span><br>
                    <span id="cphMain_lblEventName" class="lblSmall"></span>
                    &nbsp;<span id="cphMain_lblEvtStart" class="lblSmall"></span>
                </td>
                <td style="text-align: right; vertical-align: top; -webkit-box-align: center; align-items: center; justify-content: space-between; display: flex; border-spacing: 0; padding: 0 !important; border-collapse: collapse; ">
                    <input type="hidden" name="ctl00$cphMain$hdnKey" id="cphMain_hdnKey">
                    <input type="hidden" name="ctl00$cphMain$hdnGUID" id="cphMain_hdnGUID">
                    <input type="submit" name="ctl00$cphMain$cmdApply" value="Apply" id="cphMain_cmdApply" class="btnSmall">
                    <input type="submit" name="ctl00$cphMain$cmdCancel" value="Cancel" onclick="return goBack();" id="cphMain_cmdCancel" class="btnSmall">
                    <input type="submit" name="ctl00$cphMain$cmdSave" value="Save" id="cphMain_cmdSave" class="btnSmall">
                </td>
            </tr>*@

        <div>

            <h3>
                NEW TASK
                <input type="submit" value="Apply" onclick="return validateInputs(event);" />
                <input type="submit" value="Cancel" onclick="return validateInputs(event);" />
                <input  type="submit" value="Save" onclick="return validateInputs(event);" />
            </h3>

        </div>


        @*<input type="submit" value="search" />*@





    </header>

    <div style="width:100%; ">
        <table class="slideright">
            <td class="slideright">
                <lable>Title:</lable>
                <br />
                <input type="text" class="slideright" name="title" id="title" />
            </td>


        </table>

        <table>

            <td class="slideright">
                <lable>Description:</lable>
                <br />
                <input type="text" class="slideright" name="description" id="description" />
            </td>
        </table>
        <div>
            <br />
            <br />
        </div>
        <table>

            <td style="padding-left: 5px">

                <span class="slideright">Category:</span>
                <br>

                <select id="ddlcategory" name="category">
                    <option value="0">None</option>
                    @foreach (var category in Model.commondropdownlist.categorydropdowns)
                    {
                        <option value="@category.pKey">@category.TaskCategoryID</option>
                    }
                </select>


            </td>


            <td style="padding-left: 5px">

                <span>Status:</span>
                <br>
                <select id="ddlstatus" name="status">
                    @foreach (var status in Model.commondropdownlist.statusdropdowns)
                    {
                        <option value="@status.pKey">@status.TaskStatusID</option>
                    }
                </select>


            </td>

            <td class="slideright">

                <br />
                <input type="checkbox" name="reviewed" />
                <label>Reviewed</label>
            </td>

            <td class="slideright">

                <br />
                <input type="checkbox" name="active" />
                <label>Active</label>
            </td>
        </table>



    </div>

    <div>
        <table>
            <span class="plan" style="padding:10px">Planning</span>


            <div style="width: 700px; height: 300px; border-radius: 5px; border: 0.5px solid #b4b4b4; padding:10px;">


                <lable style="color:darkblue" font-weight: bold;>Specifications</lable>
                <br />
                <br />

                <label>Plan Date:</label>

                <input type="date" name="plandate" />

                <label>Due Date:</label>
                <input type="date" name="duedate" />

                <label>Forecast</label>
                <input type="date" name="forecast" />

                <br />
                <br />

                <span style="padding: 5px">Repeat:</span><br>

                <select id="ddlrepeat" name="repeat">

                    @foreach (var repeat in Model.commondropdownlist.repeatdropdowns)
                    {
                        <option value="@repeat.pKey">@repeat.TaskRepeatID</option>
                    }
                </select>

            </div>
        </table>
    </div>
</form>

