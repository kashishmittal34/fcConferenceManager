@model IEnumerable<fcConferenceManager.Models.Portolo.Product>

@{
    ViewBag.Title = "Portolo";
    Layout = "~/Views/Portolo/Shared/_Layout.cshtml";
}

@*<link href="~/Css/jquery.dataTables.min.css" rel="stylesheet" />*@
<link href="/Css/multiple-select.css" rel="stylesheet" />
<script src="/Scripts/multiple-select.js" type="text/javascript"></script>
<link href="~/Content/components.css" rel="stylesheet" />
<link href="~/Css/jquery-ui.css" rel="stylesheet" />
<script src="~/Scripts/jquery.dataTables.min.js"></script>
<script src="~/Scripts/dataTable.buttons.min.js"></script>
<script src="~/Scripts/jquery.table2excel.min.js"></script>

<head>

    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=, initial-scale=1.0">

</head>


<style>
    .form-control:disabled, .form-control[readonly] {
        background-color: #e9ecef0f;
        opacity: 1;
    }

    .dataTables_paginate {
        width: 100%;
        text-align: center !important;
        border: 1px solid #e6e6e6;
        background-color: #f9f9f9;
        padding: 5px 0 4px;
        line-height: 22px;
        float: none !important;
        margin: 0px;
    }

        .dataTables_paginate .paginate_button {
            border-width: 1px !important;
            border-style: solid !important;
            border-color: #e0e0e0 !important;
            border-radius: 0 !important;
            color: #000 !important;
            background: #f9f9f9 !important;
            padding: 3px !important;
            display: inline-block !important;
            position: relative;
            vertical-align: middle;
            cursor: pointer !important;
            font-size: 13px;
            margin: 5px;
        }


    .dataTables_wrapper .dataTables_paginate a.paginate_button:hover {
        color: #333 !important;
        background-color: #e7e7e7 !important;
    }

    .paginate_button.previous:after, .paginate_button.next:after {
        content: "";
        display: block;
        border-width: 4px;
        border-style: solid;
        border-color: transparent #000 transparent transparent;
        position: absolute;
        top: 50%;
        right: 6px;
        transform: translateY(-50%);
    }

    .paginate_button.previous, .paginate_button.next {
        font-size: 0;
        width: 20px !important;
        height: 20px;
    }

        .paginate_button.next:after {
            border-color: transparent transparent transparent #000;
            right: auto;
            left: 6px;
        }

    .dataTable thead .sorting_desc:after, .dataTable thead .sorting_asc:after, .dataTable thead .sorting:after, .dataTable thead .sorting:before {
        content: none;
    }
</style>
<body>
    @if (ViewBag.InvalidExcel != null)
    {
        <script type="text/javascript">

            window.onload = function () {
                alert("@ViewBag.InvalidExcel");
            };
         </script>
     }
    <section class="task-list-form">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">

                    @using (Html.BeginForm("SearchProduct", "Product", FormMethod.Get))
                    {
                        <div class="control-icons">
                            <h2>Product List</h2>

                            <button type="submit" name="excel" value="true" style="border-color: white; border: none;background-color:white">
                                <i class="fa-solid fa-download" title="Download Excel"></i>
                            </button>

                            <button type="submit" value="Search" name="action" style="border-color: white; border: none;background-color:white" title="Search">
                                <i class="fa-solid fa-magnifying-glass"></i>
                            </button>
                            <a href="~/Product/ProductList"><i class="fa-solid fa-arrows-rotate" title="Reset"></i></a>

                            <div class="controls">
                                <button type="button" class="brdr-1 btn-sm" data-toggle="modal" data-target="#model-mrole" onclick="Openform()">
                                    ImportExcel
                                </button>
                                <a class="brdr-1 btn-sm" href="/Product/AddProduct">Add Product</a>

                                <a class="brdr-1 btn-sm" href="/Product/Delete" id="btnDelete" onclick="return confirm('Are you sure?')"><i class="fa fa-trash-o"></i>Delete</a>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-2">
                                <div class="form-group">
                                    <label>Product Name:</label>
                                    @Html.TextBox("name", null, new { @class = "form-control form-control-sm", @id = "nameField" })
                                </div>
                            </div>
                            <div class="col-lg-2">
                                <div class="form-group">
                                    <label>Description:</label>
                                    @Html.TextBox("description", null, new { @class = "form-control form-control-sm", @id = "description" })
                                </div>
                            </div>
                            <div class="col-lg-2">
                                <div class="form-group">
                                    <label> Price:</label>
                                    <input type="number" name="price" class="form-control form-control-sm" value="@ViewBag.Price" />
                                </div>
                            </div>
                        </div>
                        <br />
                    }
                    <div class="card">
                        <div class="emp-data">
                            <table class="table table-bordered mb-0" id="table">
                                <thead>
                                    <tr class="table-hd">
                                        <th style="width:2px;" data-sortable="false">
                                            <input type="checkbox" name="select-all" id="select-all" />
                                        </th>
                                        <th data-sortable="true">Product Name</th>
                                        <th data-sortable="true">Description</th>
                                        <th data-sortable="true">Price</th>
                                        <th>Edit</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (ViewBag.Products != null)
                                    {
                                        foreach (var item in ViewBag.Products.Rows)
                                        {
                                            <tr>
                                                <td><input type="checkbox" name="ID" value="@item["ProductId"]" class="custom-checkbox chkCheckBoxId" /> </td>
                                                <td> @item["ProductName"] </td>
                                                <td> @item["Description"] </td>
                                                <td> $@item["Price"] </td>

                                                <td style="text-align:center"><a href="/Product/Edit/@item["ProductId"]"> Edit</a></td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        </section>

    <div class="modal fade" id="modal-mrole" tabindex="-1" aria-labelledby="modalOne" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-xl align-top">
            <div class="modal-content">
                <div class="modal-header with-border">

                    <h3 class="box-title">Import Excel File</h3>
                </div>
                <div class="modal-body">
                    <div class="box box-primary">
                        @using (Html.BeginForm("ImportFromExcel", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            <div class="row">
                                <div class="modal-body" style="height:200px">
                                    <div class="col-md-8">
                                        <div class="form-group row">
                                            <label class="control-label" style="font-size:20px"><b>Import Excel:</b></label>

                                            <br />
                                            <br />

                                            <input type="file" id="files" name="files" required="required" class="form-control">
                                        </div>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="submit" class="btn brdr-1 btn-sm nav__link mr-0" id="Apply">Upload</button>
                                    <button id="closeModal" type="button" class="btn brdr-1 btn-sm pull-right" data-bs-dismiss="modal" aria-label="Close">Close</button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <p>	© 2022 by Elimar Systems. All Rights Reserved <a href="#" class="ml-5">Website Terms of Use</a></p>
                </div>
            </div>
        </div>
    </footer>

    <script>
        $(document).ready(function () {
            $("#table").dataTable({
                paging: true, bFilter: true, ordering: true, searching: true, dom: 'tp', "order": [[0, "desc"]],
            });

            $(".paginate_button").on("click", function () {
                $("#select-all").prop('checked', false);
            });
        });


        var primarykey = [];

        $("#select-all").click(function (event) {
            if (this.checked) {
                primarykey.length = 0;
                // Iterate each checkbox
                $(':checkbox').each(function () {
                    this.checked = true;
                    if (this.value != "on") {
                        primarykey.push(this.value);
                    }
                });
            }
            else {
                $(':checkbox').each(function () {
                    this.checked = false;
                });
            }

        });

        $("#btnDelete").click(function (e) {
            debugger
            var checklist = [];
            $(':checkbox:checked').each(function () {
                if (this.value != "on")
                    checklist.push(this.value);
            });

            var ids = checklist.join(", ");
            if (ids == "")
                alert("Please select at least one topic to delete");
            else {
                $.ajax({
                    url: "/Product/Delete",
                    type: "POST",
                    data: { ids: ids }
                });
            }
        });
        $(document).ready(function () {
            $('#Apply').prop('disabled', true);
            $('#files').change(function () {
                var extension = $(this).val().split('.').pop().toLowerCase();
                var validFileExtensions = ['xls', 'xlsx'];
                if ($.inArray(extension, validFileExtensions) == -1) {
                    alert("Sorry! Upload Only 'xls' ,'xlsx' Excel Files")
                    $(this).replaceWith($(this).val('').clone(true));
                    //Disable Submit Button
                    $('#Apply').prop('disabled', true);
                } else {
                    //Enable Submit Button
                    $('#Apply').prop('disabled', false);
                }
            });
        });
        function Openform() {
            $('#modal-mrole').modal('show');
        }
        </script>

        <link rel="stylesheet" href="../Scripts/jquery-ui.css" />
        <script src="../Scripts/jquery-ui.js"></script>
    </body>




