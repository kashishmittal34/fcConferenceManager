@model List<fcConferenceManager.Models.Portolo.PortoloContactUs>
@{
    ViewBag.Title = "Contact-Us";
    Layout = "~/Views/Portolo/Shared/_Layout.cshtml";
}
<link href="~/Content/components.css" rel="stylesheet" />
<script src="~/Scripts/jquery.dataTables.min.js"></script>
<style>
    section, h1 {
        padding: 0 1em;
    }

    .grid {
        display: grid;
        grid-template-columns: repeat(3,400px); /* 3 columns */
        grid-template-rows: repeat(3,400px); /* 3 rows  */
        grid-gap: 30px 30px; /* 50 pixels of space added between rows and 30 pixels added between columns  */
    }

    .grid-item {
        border: gray solid;
        padding-top: 10px;
        padding-inline: 30px;
        background-color: white;
        box-shadow: rgb(50 50 93 / 25%) 0px 6px 12px -2px, rgb(0 0 0 / 30%) 0px 3px 7px -3px;
        border-radius: 10px;
    }

    .unique {
        width: 250px;
        height: 250px;
        border-radius: 10px;
        box-shadow: rgb(50 50 93 / 25%) 0px 6px 12px -2px, rgb(0 0 0 / 30%) 0px 3px 7px -3px;
    }
</style>

<body>
    <section class="task-list-form">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <form id="formFields" action="/Contact/ContactUs" method="get">
                        <div class="control-icons">
                            <h2>Contact Us</h2>
                        </div>
                        <div class="card" style="object-fit:contain; margin:auto">
                            <table>
                                <tr style="text-align:justify">
                                    <td style="vertical-align: top; font-size: 15px; padding-top: 5px;">
                                        <div class="grid">
                                            @if (Model.Count > 0)
                                            {
                                                foreach (var item in Model)
                                                {
                                                    <div class="grid-item">
                                                        @if (item.ImageSrc != null && item.ImageSrc != "")
                                                        {
                                                            <img class="unique" src="@item.ImageSrc" /><br />
                                                        }
                                                        else
                                                        {
                                                            <img class="unique" src="~/PortoloDocuments/blankphoto.png" alt="your image" /><br />
                                                        }
                                                        <b> @Html.DisplayFor(modelitem => item.Role)</b> <br />
                                                        <b style="color:orange;font-style:oblique">@Html.DisplayFor(modelitem => item.Name)</b><br />
                                                        @Html.DisplayFor(modelitem => item.Title)<br />
                                                        @Html.DisplayFor(modelitem => item.Phone)<br />
                                                        @Html.DisplayFor(modelitem => item.Email)<br />
                                                    </div>
                                                }
                                            }
                                            else
                                            {
                                                <b>No Contact Found!</b>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            </table>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </section>
    <link rel="stylesheet" href="../Scripts/jquery-ui.css" />
    <script src="../Scripts/jquery-ui.js"></script>
</body>




