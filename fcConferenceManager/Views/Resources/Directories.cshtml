
@{
    ViewBag.Title = "Directories";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script>
    function change(obj) {
        obj.style.color = '#266A2E';
    }
    function changeDefault(obj) {
        obj.style.color = 'DarkBlue';
    }
</script>
<style>
    .lblTitle {
        font-size: 18pt;
        color: Navy;
        background-color: transparent;
    }

    .btnSmall {
        background-color: #fff;
        border: 1px solid black;
        border-radius: 2px;
        font-size: 10pt;
    }

    #dvDir {
        padding: 10px;
    }
</style>
<div id="dvDir">
    <table class="SquarePanel" style="width:100%; height:100%">
        <tr>
            <td>
                <table style="width: 100%">
                    <tr>
                        <td>
                            <label id="lblTitle" class="lblTitle">Directories</label>
                        </td>
                        @*<td style="text-align: right">
                                <input type="button" id="btnEdit" value="Edit" class="btnSmall" />
                                <input type="button" id="btnCancel" value="Close" class="btnSmall" />
                            </td>*@
                    </tr>
                </table>
            </td>
        </tr>
        <tr>
            <td>
                <label id="lblMsg" style="display:none"></label>
            </td>
        </tr>
        <tr>
            <td>
                <table class="magi-mobile-fluid">
                    <tr>
                        <td style="padding:10px 10px 10px 2px;">
                            <a id="btnAssociation" href="/DirectoriesAssociations" style="color:darkblue ;" onmouseover="change(this)" onmouseout="changeDefault(this)"><b>@ViewBag.btnAssociation</b></a>
                        </td>
                    </tr>
                    <tr>
                        <td style="padding:10px 10px 10px 2px;">
                            <a id="btnBooks" href="/DirectoriesBooks" style="color:darkblue ;" onmouseover="change(this)" onmouseout="changeDefault(this)"><b>@ViewBag.btnBooks</b></a><br />
                            <label>Essential books for the clinical research professional</label>
                        </td>
                    </tr>
                    <tr>
                        <td style="padding:10px 10px 10px 2px;">
                            <a id="btnGovt" href="/DirectoriesGovernment" style="color:darkblue ;" onmouseover="change(this)" onmouseout="changeDefault(this)"><b>@ViewBag.btnGovt</b></a>
                        </td>
                    </tr>
                    <tr>
                        <td style="padding:10px 10px 10px 2px;">
                            <a id="btnPub" href="/DirectoriesPublications" style="color:darkblue ;" onmouseover="change(this)" onmouseout="changeDefault(this)"><b>@ViewBag.btnPub</b></a>
                        </td>
                    </tr>
                    <tr>
                        <td style="padding:10px 10px 10px 2px;">
                            <a id="btnSup" href="/DirectoriesSuppliers" style="color:darkblue ;" onmouseover="change(this)" onmouseout="changeDefault(this)"><b>@ViewBag.btnSup</b></a>
                        </td>
                    </tr>
                    <tr>
                        <td style="padding:10px 10px 10px 2px;">
                            <a id="btnStaff" href="/DirectoriesStaffing" style="color:darkblue ;" onmouseover="change(this)" onmouseout="changeDefault(this)"><b>@ViewBag.btnStaff</b></a>
                        </td>
                    </tr>
                    <tr>
                        <td style="padding:10px 10px 10px 2px;">
                            <a id="btnSpon" href="/DirectoriesSponsors" style="color:darkblue ;" onmouseover="change(this)" onmouseout="changeDefault(this)"><b>@ViewBag.btnSpon</b></a>
                            <a href="/DirectoriesSponsors" style="display:none;">Study Sponsors (1,600+)</a>
                        </td>
                    </tr>
                    <tr>
                        <td style="padding:10px 10px 10px 2px;">
                            <a id="btnEvent" href="/DirectoriesEvents" style="color:darkblue ;" onmouseover="change(this)" onmouseout="changeDefault(this)"><b>@ViewBag.btnEvent</b></a>
                        </td>
                    </tr>
                    <tr>
                        <td style="padding: 10px 10px 10px 2px;">
                            <a id="btnTrain" href="/DirectoriesTraining" style="color:darkblue ;" onmouseover="change(this)" onmouseout="changeDefault(this)"><b>@ViewBag.btnTrain</b></a>
                        </td>
                    </tr>
                    <tr>
                        <td style="padding:10px 10px 10px 2px; display :none">
                            <a id="btnWeb" href="/Webinars" style="color:darkblue ;" onmouseover="change(this)" onmouseout="changeDefault(this)"><b>@ViewBag.btnWeb</b></a>
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
</div>